html
  head
    title Deckify

    block default_styles
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
      link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito&display=swap")


      style(type='text/css').
        *,
        *:after,
        *::before {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
          text-decoration: none;
          list-style-type: none;
          outline: none;
        }

        body {
          background: linear-gradient(#fff 0,#f6f6f6 100%);
        }

        hr {
          height: 0;
          margin: 15px 0;
          overflow: hidden;
          background: transparent;
          border: 0;
          border-bottom: 1px solid #dfe2e5;
        }

        select, input[type=text] {
          background: none;
          font-size: 20px;
          width: 100%;
          border-radius: 3px;
          border: 1px solid #dddfe5;
          padding: 5px;
        }

        #navigation {
          background: linear-gradient(91.14deg,#3c5af3 0,#8253ff 122.55%);
          box-shadow: 0 0 1.8rem rgba(0, 0, 0, 0.75);
          padding: 10px 10px 15px 10px;
          font-family: 'Nunito', sans-serif;
          color: #2b2a35;
        }

        #navigation .logo {
          color: white;
          font-family: 'Nunito', sans-serif;
          font-weight: 900;
          font-size: 35px;
          display: inline-block;
          margin-right: 50px;
          position: relative;
          text-decoration:none;
        }

        #navigation a {
          color: white;
        }

        h2#page-title {
          padding: 2em 2em 1.5em;
        }

        #content {
          font-family: 'Nunito', sans-serif;
          color: #2b2a35;
        }

        blockquote{
          font-size: 1.4em;
          width:100%;
          margin:10px 0;
          font-family:Open Sans;
          font-style:italic;
          color: #555555;
          padding:1.2em 30px 1.2em 75px;
          border-left:8px solid #3c5af3 ;
          line-height:1.6;
          position: relative;
          background: linear-gradient(#f6f6f6 0,#fff 100%);
        }

        blockquote::before{
          font-family:Arial;
          content: "\201C";
          color:#3c5af3;
          font-size:4em;
          position: absolute;
          left: 10px;
          top:-10px;
        }

        blockquote::after{
          content: '';
        }

        blockquote span{
          display:block;
          color:#333333;
          font-style: normal;
          font-weight: bold;
          margin-top:1em;
        }

    block styles

  body
    #navigation
      a(href="/")
        h1.logo Deckify
      block navigation
    #content
      block content
    #footer
      block footer

    block default_scripts
      script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
      script(src="https://cdn.jsdelivr.net/npm/sweetalert2@8")

      script.
        function FORM_DATA ($form) {
            var unindexed_array = $form.serializeArray();
            var indexed_array = {};

            $.map(unindexed_array, function(n, i){
                indexed_array[n['name']] = n['value'];
            });

            return indexed_array;
        }

        function REQUEST (options, done) {
          $.ajax({
            type: options.method,
            url: options.url,
            data: options.data,
            dataType: 'json',
            success: function(response) {
              done(null, response);
            },
            error: function (response) {
              done(response && response.responseJSON);
            }
          });
        }

    block scripts
