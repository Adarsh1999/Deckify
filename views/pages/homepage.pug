extends ../layouts/default.pug

block styles
  style(type='text/css').
    * {
      box-sizing: border-box;
    }

    .nav {
      display: inline-block;
      position: absolute;
      right: 20px;
      top: 22px;
      font-size: 20px;
      cursor: pointer;
    }

    .nav a {
      margin-left: 25px;
    }

    .md-chip {
      display: inline-block;
      background: linear-gradient(91.14deg,#3c5af3 0,#8253ff 122.55%);
      padding: 0 14px;
      border-radius: 32px;
      font-size: 13px;
      &.md-chip-hover:hover {
        background: #ccc;
      }
    }

    /* Float four columns side by side */
    .column {
      float: left;
      width: 25%;
      padding: 12px;
    }

    /* Remove extra left and right margins, due to padding */
    .row {margin: 0 -5px;}

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }

    .clearfix {
      overflow: auto;
    }

    a {
      text-decoration: none;
      color: black;
    }

    .deck-name {
      color: #3c5af3;
      font-size: 20px;
    }

    /* Responsive columns */
    @media screen and (max-width: 600px) {
      .column {
        width: 100%;
        display: block;
        margin-bottom: 20px;
      }
    }

    /* Style the counter cards */
    .card {
      box-shadow: 0 0.0625em 0.1875em 0 rgba(0, 0, 0, 0.1), 0 0.5em 0 -0.25em #f2f2f2, 0 0.5em 0.1875em -0.25em rgba(0, 0, 0, 0.1), 0 1em 0 -0.5em #e5e5e5, 0 1em 0.1875em -0.5em rgba(0, 0, 0, 0.1);
      padding: 16px;
      text-align: center;
      background-color: #fff;
      word-break: break-word;
      height: 170px;
      border-radius: 5px;
      position: relative;
      transition: box-shadow 120ms,background-color 120ms;
    }

    .card:hover {
      box-shadow: 0 0.2rem 0.5rem rgba(103,110,144,.4), 0 0 0 0.1rem rgba(103,110,144,.05);
    }

    .container {
      margin: 0 2em;
    }

    .meta span.md-chip {
      color: white;
      float: right;
      position: absolute;
      bottom: 10px;
      right: 10px;
    }

    .meta span.author {
      float: left;
      opacity: 0.3;
      position: absolute;
      bottom: 10px;
      left: 10px;
    }

    .meta span.author:hover {
      opacity: 1;
    }

    .deck-description {
      text-align: left;
      padding: 15px 0;
    }

block navigation
  .nav
    a(href="/me") My decks
    a(href="/create") Create new

block content
    h2#page-title Discover
    div.container
      div.row.flexbox
        each deck, i in decks
          if i%4 === 0 && i!==0
            div.clearfix
            div.column.col
              a(href='/' + deck.user.username + '/' + deck.name)
                div.card
                  h3.deck-name #{deck.name}
                  p.deck-description #{deck.description}
                  .meta
                    a(href="/" + deck.user.username)
                      span.author @#{deck.user.username}
                    span.md-chip #{deck.category}
          else
            div.column.col
              a(href='/' + deck.user.username + '/' + deck.name)
                div.card
                  h3.deck-name #{deck.name}
                  p.deck-description #{deck.description}
                  .meta
                    a(href="/" + deck.user.username)
                      span.author @#{deck.user.username}
                    span.md-chip #{deck.category}

